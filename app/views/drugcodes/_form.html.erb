<%= form_for @drugcode, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Drugcode</legend>

    <div class="control-group">
      <%= f.label :regno, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :regno, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :tradename, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :tradename, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :drugname, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :drugname, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :strength, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :strength, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :std_code, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :std_code, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', drugcodes_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
